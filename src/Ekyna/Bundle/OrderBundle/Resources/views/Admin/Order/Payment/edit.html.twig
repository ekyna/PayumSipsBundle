{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
    <h1>{{ 'ekyna_order.payment.header.edit'|trans|raw }}</h1>
{% endblock title %}

{% block actions %}
    {{ admin_resource_btn(order, 'show', {'label': 'ekyna_core.button.back'}) }}
{% endblock actions %}

{% block main %}
    {{ form_start(form) }}
    {% include form_template %}
    {{ form_end(form) }}
{% endblock main %}

{% block stylesheets -%}
    {{ parent() }}
    {% stylesheets output='css/payment.css' filter='cssrewrite, ?yui_css'
        '@EkynaPaymentBundle/Resources/asset/css/payment.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{%- endblock stylesheets %}