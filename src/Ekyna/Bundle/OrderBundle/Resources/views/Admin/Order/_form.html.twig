<ul class="nav nav-tabs">
    <li class="active"><a href="#orde-order-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    <li><a href="#orde-order-addresses" data-toggle="tab">{{ 'ekyna_order.order.field.addresses'|trans }}</a></li>
    <li><a href="#orde-order-details" data-toggle="tab">{{ 'ekyna_order.order.field.details'|trans }}</a></li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    <div class="tab-content">
        <div class="tab-pane active" id="orde-order-general">
            {{ form_row(form.number) }}
            {{ form_row(form.user) }}
            <hr>
            {{ form_row(form.identity) }}
            {{ form_row(form.email) }}
        </div>
        <div class="tab-pane" id="orde-order-addresses">
            {{ form_row(form.invoiceAddress) }}
            <hr>

            {#{{ form_row(form.sameAddress) }}
            <div id="delivery-address">
                {{ form_row(form.deliveryAddress) }}
            </div>#}


            <div class="form-group">
                {#<label class="control-label col-md-2 required">Addresse de facturation</label>#}
                {{ form_label(form.deliveryAddress) }}
                <div class="col-md-10">
                    {{ form_row(form.sameAddress) }}
                    <div id="delivery-address">
                        {{ form_widget(form.deliveryAddress) }}
                    </div>
                </div>
            </div>

        </div>
        <div class="tab-pane" id="orde-order-details">
            {{ form_row(form.items) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>