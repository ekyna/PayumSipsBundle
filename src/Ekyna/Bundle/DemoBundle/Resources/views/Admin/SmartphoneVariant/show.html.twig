{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_demo.smartphoneVariant.header.show'|trans({'%name%': smartphoneVariant.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_button('ekyna_core.button.back', {'type': 'link', 'path': path('ekyna_demo_smartphone_admin_show', identifiers)}) }}
{{ admin_resource_btn(smartphoneVariant, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
	{{ admin_resource_btn(smartphoneVariant, 'edit') }}
	{{ admin_resource_btn(smartphoneVariant, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#prod-smartphone-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
        <li><a href="#prod-smartphone-characteristics" data-toggle="tab">{{ 'Caract√©ristiques' }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="prod-smartphone-general">
                {{ show_row(smartphoneVariant.name, 'text', 'ekyna_core.field.name') }}
            </div>
            <div class="tab-pane" id="prod-smartphone-characteristics">
                {{ render_characteristics(smartphoneVariant.characteristics, {'highlight_inherited': true}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}