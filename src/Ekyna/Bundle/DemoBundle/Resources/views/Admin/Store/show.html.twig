{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
    <h1>{{ 'ekyna_demo.store.header.show'|trans({'%name%': store})|raw }}</h1>
{% endblock %}

{% block actions %}
    {{ admin_resource_btn(store, 'list') }}
    {{ admin_resource_btn(store, 'new') }}
{% endblock %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(store, 'edit') }}
        {{ admin_resource_btn(store, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#demo-store-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="demo-store-general">
                    {{ show_row(store.name, 'text', 'ekyna_core.field.name') }}
                    {{ show_row(store.street, 'text', 'ekyna_core.field.street') }}
                    {{ show_row(store.supplement, 'text', 'ekyna_core.field.supplement') }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ show_row(store.postalCode, 'text', 'ekyna_core.field.postal_code', {'label_nb_col': 4}) }}
                        </div>
                        <div class="col-md-6">
                            {{ show_row(store.city, 'text', 'ekyna_core.field.city', {'label_nb_col': 4}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ show_row(store.country|country, 'text', 'ekyna_core.field.country', {'label_nb_col': 4}) }}
                        </div>
                        <div class="col-md-6">
                            {{ show_row(store.state, 'text', 'ekyna_core.field.state', {'label_nb_col': 4}) }}
                        </div>
                    </div>
                    {{ show_row(store.coordinate, 'coordinate', 'ekyna_google.field.coordinate') }}
                    {#{{ show_row(store.enabled, 'checkbox', 'ekyna_core.field.enabled') }}#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}