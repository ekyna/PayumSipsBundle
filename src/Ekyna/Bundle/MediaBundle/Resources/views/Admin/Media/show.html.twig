{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_media.media.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(media, 'list') }}
{{ admin_resource_btn(media, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
	{{ admin_resource_btn(media, 'edit') }}
	{{ admin_resource_btn(media, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#media-media-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="media-media-general">
                {{ show_row(media.title, 'text', 'ekyna_core.field.title', {'label_nb_col': 4}) }}
                {{ show_row(path('ekyna_media_media_admin_tinymce', identifiers|merge({'mediaId': media.id})), 'tinymce', 'ekyna_core.field.description') }}
                {{ show_row(media, 'media', 'ekyna_core.field.image', {'label_nb_col': 4}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}