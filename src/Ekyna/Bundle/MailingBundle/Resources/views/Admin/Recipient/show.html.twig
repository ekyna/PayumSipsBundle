{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_mailing.recipient.header.show'|trans({'%name%': recipient})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(recipient, 'list') }}
{{ admin_resource_btn(recipient, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(recipient, 'edit') }}
    {{ admin_resource_btn(recipient, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#mail-recipient-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="mail-recipient-general">
		        {{ show_row(recipient.email, 'text', 'ekyna_core.field.email') }}
                <div class="row">
                    <div class="col-md-6">{{ show_row(recipient.firstName, 'text', 'ekyna_core.field.first_name', {'label_nb_col': 4}) }}</div>
                    <div class="col-md-6">{{ show_row(recipient.lastName, 'text', 'ekyna_core.field.last_name', {'label_nb_col': 4}) }}</div>
                </div>

		    </div>
        </div>
	</div>
</div>
{% endblock %}