{% spaceless %}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
</head>
<body style="font-family:Helvetica,Arial,sans-serif;font-size:14px;line-height:19px;color:#333333;background:#f2f2f2;">
    <div style="width:600px;margin:auto;">
        <div style="box-shadow:0 2px 4px #cccccc;">
            <div style="background:#1aa1e1;padding:15px;">
                <h1 style="color:#ffffff;padding:0;margin:0;font-size:24px;line-height:24px;font-weight:normal;text-align:center;">
                    {%- block subject -%}
                        {{- campaign.subject|raw -}}
                    {%- endblock -%}
                </h1>
            </div>
            <div style="background:#ffffff;padding:15px;">
                {%- block body -%}
                    <p>Bonjour {{ recipient.firstName ~ ' ' ~ recipient.lastName }},</p>
                    {{- campaign.content|raw -}}
                {%- endblock -%}
            </div>
            <div style="background:#4e4e4e;padding:15px;">
                <p style="text-align:center;margin:0;">
                    <a href="{{ url(ekyna_cms_home_route) }}" style="color:#9a9a9a">{{ get_setting('general.site_name') }}</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
{% endspaceless %}