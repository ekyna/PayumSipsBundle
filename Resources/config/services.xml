<?xml version="1.0" encoding="UTF-8" ?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_payum_sips.client.class">Ekyna\Component\Payum\Sips\Client\Client</parameter>
        <parameter key="ekyna_payum_sips.template.capture">@EkynaPayumSips/Action/capture.html.twig</parameter>
    </parameters>

    <services>

        <!-- Client -->
        <service id="ekyna_payum_sips.client"
                 class="%ekyna_payum_sips.client.class%">
            <argument type="collection"/><!-- Replaced by DI extension -->
            <argument type="service" id="logger"/>
        </service>

        <!-- Cache warmer -->
        <service id="ekyna_payum_sips.cache_warmer.pathfile"
                 class="Ekyna\Bundle\PayumSipsBundle\CacheWarmer\PathFileCacheWarmer">
            <argument type="collection"/><!-- Replaced by DI extension -->
            <argument type="collection"/><!-- Replaced by DI extension -->
            <argument>%kernel.root_dir%</argument>
            <tag name="kernel.cache_warmer"/>
        </service>

    </services>

</container>
