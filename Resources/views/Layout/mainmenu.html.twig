{% extends 'EkynaAdminBundle:Layout:sidemenu.html.twig' %}

{% macro attributes(attributes) -%}
{% spaceless %}
    {%- for name, value in attributes -%}
        {%- if value is not none and value is not sameas(false) -%}
            {{- ' %s="%s"'|format(name, value is sameas(true) ? name|e : value|e)|raw -}}
        {%- endif -%}
    {%- endfor -%}
{% endspaceless %}
{%- endmacro %}

{% block spanElement -%}
{% spaceless %}
    <a{{ _self.attributes(item.labelAttributes) }}>{{ block('label') }}{% if item.hasChildren %} <b class="caret">{% endif %}</b></a>
{% endspaceless %}
{%- endblock spanElement %}
