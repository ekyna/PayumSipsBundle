<ul class="nav nav-tabs">
    <li class="active"><a href="#prod-product-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    <li><a href="#prod-product-pricing" data-toggle="tab">{{ 'ekyna_core.field.pricing'|trans }}</a></li>
    <li><a href="#prod-product-content" data-toggle="tab">{{ 'ekyna_core.field.content'|trans }}</a></li>
    <li><a href="#prod-product-images" data-toggle="tab">{{ 'ekyna_core.field.images'|trans }}</a></li>
    <li><a href="#prod-product-characteristics" data-toggle="tab">{{ 'ekyna_characteristics.menu'|trans }}</a></li>
    <li><a href="#prod-product-seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a></li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
        <div class="tab-pane active" id="prod-product-general">
            {{ form_row(form.name) }}
            {{ form_row(form.designation) }}
            {{ form_row(form.category) }}
            {{ form_row(form.brand) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.reference, {'label_col': 4, 'widget_col': 8}) }}</div>
                <div class="col-md-6">{{ form_row(form.releasedAt, {'label_col': 4, 'widget_col': 8}) }}</div>
            </div>
            {{ form_row(form.tags) }}
        </div>
        <div class="tab-pane" id="prod-product-pricing">
            <div class="row">
                <div class="col-md-6">{{ form_row(form.type, {'label_col': 4, 'widget_col': 8}) }}</div>
                <div class="col-md-6">{{ form_row(form.weight, {'label_col': 4, 'widget_col': 8}) }}</div>
            </div>
            <div class="row">
                <div class="col-md-6">{{ form_row(form.price, {'label_col': 4, 'widget_col': 8}) }}</div>
                <div class="col-md-6">{{ form_row(form.tax, {'label_col': 4, 'widget_col': 8}) }}</div>
            </div>
            <hr />
            {{ form_row(form.options) }}
        </div>
        <div class="tab-pane" id="prod-product-content">
            {{ form_row(form.html) }}
        </div>
        <div class="tab-pane" id="prod-product-images">
            {{ form_row(form.images) }}
            {{ form_row(form.document) }}
        </div>
        <div class="tab-pane" id="prod-product-characteristics">
            {% form_theme form.characteristics "@characteristics/Form/form_div_layout.html.twig" %}
            {{ form_row(form.characteristics) }}
        </div>
        <div class="tab-pane" id="prod-product-seo">
            {{ form_row(form.seo) }}
        </div>
    </div>
    {{ form_rest(form) }}
</div>