<ul class="nav nav-tabs">
    <li class="active"><a href="#blog-post-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
    <li><a href="#blog-post-seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a></li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
	    <div class="tab-pane active" id="blog-post-general">
	        {{ form_row(form.title) }}
	        {{ form_row(form.subTitle) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.category, {'label_col': 4, 'widget_col': 8}) }}</div>
                <div class="col-md-6">{{ form_row(form.publishedAt, {'label_col': 4, 'widget_col': 8}) }}</div>
            </div>
	        {{ form_row(form.tags) }}
	    </div>
	    <div class="tab-pane" id="blog-post-seo">
	        {{ form_row(form.seo) }}
	    </div>
    </div>
    {{ form_rest(form) }}
</div>